@model ProdutosModel
@{
    if (Context.Request.RouteValues.ContainsKey("id"))
        ViewBag.Subtitulo = "Alteração de Produto";
    else
        ViewBag.Subtitulo = "Cadastro de Produto";
}

<style>
    .custom-file-label::after {
        content: "Procurar";
    }
</style>

<h1 class="text-primary">@ViewBag.Subtitulo</h1>
<hr />

<form asp-action="Cadastrar" enctype="multipart/form-data" class="row" style="margin-bottom: 200px;">

    <input type="hidden" asp-for="@Model.IdProduto" />

    <div class="form-group col-sm-8 col-lg-4">
        <label asp-for="@Model.IdCategoria">Categoria:</label><br />
        <select asp-for="@Model.IdCategoria" class="form-control " asp-items="@(IEnumerable<SelectListItem>)ViewBag.Categorias"></select>
        <span asp-validation-for="@Model.IdCategoria" class="text-danger"></span>

    </div>
    <div class="w-100"> </div>
    <div class="form-group col-sm-8 col-lg-4">
        <label asp-for="@Model.Nome">Nome:</label><br />
        <input asp-for="@Model.Nome" class="form-control " autofocus />
        <span asp-validation-for="@Model.Nome" class="text-danger"></span>

    </div>
    <div class="w-100"> </div>
    <div class="form-group col-4 col-lg-2">
        <label asp-for="@Model.Estoque">Estoque:</label><br />
        <input asp-for="@Model.Estoque" class="form-control" />
        <span asp-validation-for="@Model.Estoque" class="text-danger"></span>

    </div>

    <div class="form-group col-4 col-lg-2">
        <label asp-for="@Model.Preco">Preço:</label><br />
        <input asp-for="@Model.Preco" class="form-control" />
        <span asp-validation-for="@Model.Preco" class="text-danger"></span>

    </div>
    <div class="w-100"> </div>
    <div class="form-group col-sm-8 col-lg-4">
        @if (Context.Request.RouteValues.ContainsKey("id"))
        {
            <label asp-for="@Model.ImgProduto" class="custom-file-label w-auto ml-3" for="FLImgProduto">Imagem</label><br />
            <input asp-for="@Model.ImgProduto" class="custom-file-input w-auto" accept="image/*" id="FLImgProduto" multiple
                   onchange="document.getElementById('FrontImg').src = window.URL.createObjectURL(this.files[0])" />
            <img id="FrontImg" class="rounded-1" src="~/Upload/Images/@Model.ImageUrl" width="200" height="200"
                 style="border: 1px; margin-top: 20px; margin-left:10px; text-align: center;" />
            <span asp-validation-for="@Model.ImgProduto" class="text-danger"></span>
        }
        else
        {
            <label asp-for="@Model.ImgProduto" class="custom-file-label w-auto ml-3" for="FLImgProduto">Imagem</label><br />
            <input asp-for="@Model.ImgProduto" class="custom-file-input w-auto" accept="image/*" id="FLImgProduto" multiple
                   onchange="document.getElementById('FrontImg').src = window.URL.createObjectURL(this.files[0])" />
            <img id="FrontImg" class="rounded-1" src="https://bhi.com.br/wp-content/themes/arkahost52/assets/images/default.jpg" alt="Logo imagem" width="200"
                 height="200" style="border: 1px; margin-top: 20px; margin-left:10px; text-align: center;" />
        }
    </div>
    <div class="mt-3">
        <a asp-action="Index" class="btn btn-outline-secondary mr-2">Cancelar</a>
        <button class="btn btn-outline-primary " type="submit">Salvar</button>
    </div>

</form>
