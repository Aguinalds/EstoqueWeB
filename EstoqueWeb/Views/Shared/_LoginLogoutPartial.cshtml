@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@if (Context.User.Identity.IsAuthenticated)
{

    <li class="nav-item dropdown ">
        <a class="nav-link dropdown-toggle text-primary mb-4 mr-4" href="#" role="button" data-bs-toggle="dropdown">
            <span class="text-primary p-2">Olá, <b>@Context.User.Identity.Name</b></span>
        </a>
        <ul class="dropdown-menu dropdown-menu-end bg-dark mr-3">
            <li>
                <a class="dropdown-item text-primary" asp-controller="Usuario" asp-action="AlterarSenha" classes-if-active="disabled">
                    Alterar Senha
                </a>
            </li>
            <li>
                <hr class="dropdown-divider">
            </li>
            <li>
                <a class="dropdown-item text-primary" asp-controller="Usuario" asp-action="Logout">Sair</a>
            </li>
        </ul>
    </li>
}
else
{
    <a class="nav-link pe-0 bi bi-door-open mr-3" style="font-size: 17px;" asp-controller="Usuario" asp-action="Login">Entrar</a>
    <a class="text-primary text-decoration-none mr-5" style="font-size: 17px;" asp-controller="Usuario" asp-action="Cadastrar">Cadastrar</a>
}