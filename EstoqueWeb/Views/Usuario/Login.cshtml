@model LoginUsuarioViewModel
@{
    var returnUrl = "";
    if (Context.Request.Query.ContainsKey("returnUrl"))
    {
        returnUrl = Context.Request.Query["returnUrl"].ToString();
    }
    ViewBag.Subtitulo = "Login Usuário";
}
<link rel="stylesheet" href="~/css/site.css" />
<br />
<h1 class="text-primary text-center"><b>Login</b></h1>
<br />
<div asp-validation-summary="ModelOnly" class="validation-summary text-danger mb-3"></div>

<partial name="_mensagem" />
<div class="container-login" style="margin-bottom: 200px;">
    <form asp-action="Login">
        <input type="hidden" name="ReturnUrl" id="ReturnUrl" value="@returnUrl" />
        <div class="form-group mb-3">

            <input asp-for="@Model.Usuario" class="form-control w-100" autofocus
                    placeholder="E-mail" required />
            <span asp-validation-for="@Model.Usuario" class="text-danger"></span>
        </div>
        <div class="w-100"></div>
        <div class="form-group mb-3">

            <input asp-for="@Model.Senha" class="form-control" autofocus
                   autocomplete="off" required placeholder="Senha" />
            <span asp-validation-for="@Model.Senha" class="text-danger"></span>
        </div>

        <div class="w-100"></div>
        <div class="pl-4">
            <input asp-for="@Model.Lembrar" class="form-check-input" />
            <label asp-for="@Model.Lembrar" class="form-check-label">Lembrar de mim</label><br />
            <span asp-validation-for="@Model.Lembrar" class="text-danger"></span>
        </div>
        <div class="w-100"></div>
        <div class="mt-3">
            <button class="btn btn-outline-primary w-100" type="submit">Entrar</button>
        </div>
        <br />
    </form>

    <hr />
    <p class="text-center"><a asp-action="EsqueciSenha" class="text-primary font-weight-bold text-decoration-none">Esqueceu sua senha?</a></p>
    <p class="text-center"> <a asp-action="Cadastrar" class="text-primary font-weight-bold text-decoration-none">Ainda não cadastrou?</a></p>
</div>