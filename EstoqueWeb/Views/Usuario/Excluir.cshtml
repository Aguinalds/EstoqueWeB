@model UsuarioModel
@{
    ViewBag.Subtitulo = "Exclusão de Usuários";
}
<h1 class="text-primary">@ViewBag.Subtitulo</h1>
<hr />
<h4 class="text-primary">Deseja excluir esse Usuário: <span class="text-danger">@Model.NomeCompleto?</span></h4>
<form asp-action="ExcluirPost" class="w-25">
    <input type="hidden" asp-for="@Model.Id" />
    <div class="mt-3">
        <a asp-action="Index" class="btn btn-outline-success w-25">Não</a>
        <button class="btn btn-outline-danger w-25" type="submit">Sim</button>
    </div>
</form>
