@model AlterarSenhaModel
@{
    ViewBag.Subtitulo = "Alteração de Senha";
}

<h1 class="text-primary">@ViewBag.Subtitulo</h1>
<hr />

<partial name="_mensagem" />

<div asp-validation-summary="ModelOnly" class="validation-summaru text-danger my-3"></div>

<form asp-action="AlterarSenha" class="row">


    <div class="form-group mb-3 col-4">
        <input asp-for="@Model.SenhaAtual" class="form-control" placeholder="Senha Atual" autocomplete="off" autofocus />
    </div>
    <span asp-validation-for="@Model.SenhaAtual" class="text-danger"></span>

    <div class="w-100"> </div>

    <div class="form-group mb-3 col-4">
        <input asp-for="@Model.NovaSenha" class="form-control" placeholder="Nova Senha" autocomplete="off" autofocus />
    </div>
    <span asp-validation-for="@Model.NovaSenha" class="text-danger"></span>

    <div class="w-100"> </div>

    <div class="form-group mb-3 col-4">
        <input asp-for="@Model.ConfNovaSenha" class="form-control" placeholder="Confirmar Nova Senha" autocomplete="off" autofocus />
    </div>
    <span asp-validation-for="@Model.ConfNovaSenha" class="text-danger"></span>

    <div class="mt-3">
        <a asp-action="Index" asp-controller="Home" class="btn btn-outline-secondary mr-2">Cancelar</a>
        <button class="btn btn-outline-primary " type="submit">Alterar</button>
    </div>

</form>