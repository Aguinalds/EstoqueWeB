@model IEnumerable<CategoriaModel>
@{
    ViewBag.Subtitulo = "Listagem de Categorias";
}

<br />
<header class="d-flex justify-content-between align-items-center">
    <div>
        <h1 class="text-primary">@ViewBag.Subtitulo</h1>
    </div>
    <div>
        <a asp-action="Cadastrar" class="btn btn-primary">Nova Categoria</a>
    </div>
</header>
<hr />

<partial name="_Mensagem" />

@if (Model.Count() > 0)
{
    <table class="text-primary table-dark table table-striped border border-primary border-2 rounded-3 tabela-categoria" id="tableAll">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var categoria in Model)
            {
                <tr>
                    <td>@categoria.Nome</td>
                    <td>
                        <a asp-action="Cadastrar" asp-route-id="@categoria.IdCategoria"
                           class="bi bi-pencil btn btn-outline-secondary"></a>
                        <a asp-action="Excluir" asp-route-id="@categoria.IdCategoria"
                           class="bi bi-trash3-fill btn btn-outline-danger"></a>
                    </td>
                </tr>
            }

        </tbody>
    </table>
}else
            {
                <p>Não há nennhuma categoria para ser exibida</p>
            }