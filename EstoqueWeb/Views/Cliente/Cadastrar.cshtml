@model ClienteModel
@{
    if (Context.Request.RouteValues.ContainsKey("id"))
        ViewBag.Subtitulo = "Alteração de Cliente";
    else
        ViewBag.Subtitulo = "Cadastro de Cliente";
}

<h1 class="text-primary">@ViewBag.Subtitulo</h1>
<hr />

<form asp-action="Cadastrar" class="row">
    <input type="hidden" asp-for="@Model.IdUsuario" />
    <div class="form-group col-sm-8 col-lg-4">
        <label asp-for="@Model.NomeUsuario">Nome:</label><br />
        <input  asp-for="@Model.NomeUsuario" pattern="[A-Za-záàâãéèêíïóôõöúçñÁÀÂÃÉÈÍÏÓÔÕÖÚÇÑ ]+$" class="form-control"  autofocus />
        <span asp-validation-for="@Model.NomeUsuario" class="text-danger"></span>

    </div>
    <div class="w-100"></div>
    <div class="form-group col-sm-8 col-lg-4">
        <label asp-for="@Model.CPFUsuario">CPF:</label><br />
        <input  asp-for="@Model.CPFUsuario" class="form-control" pattern="[0-9]{11}" maxlength="11" />
        <span asp-validation-for="@Model.CPFUsuario" class="text-danger"></span>

    </div>
    <div class="w-100"></div>
    <div class="form-group col-sm-8 col-lg-4">
        <label asp-for="@Model.DataNascimento">Data Nascimento:</label><br />
        <input asp-for="@Model.DataNascimento" class="form-control " type="date" />
        <span asp-validation-for="@Model.DataNascimento" class="text-danger"></span>

    </div>
    <div class="w-100"></div>
    <div class="form-group col-sm-8 col-lg-4">
        <label asp-for="@Model.EmailUsuario">E-mail:</label><br />
        <input asp-for="@Model.EmailUsuario" class="form-control" required type="email" />
        <span asp-validation-for="@Model.EmailUsuario" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-outline-secondary mr-2">Cancelar</a>
        <button class="btn btn-outline-primary " type="submit">Salvar</button>
    </div>
</form>