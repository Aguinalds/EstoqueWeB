@model IEnumerable<ClienteModel>
@{
    ViewBag.Subtitulo = "Clientes";
}
<br />
<header class="d-flex justify-content-between align-items-center">
    <div>
        <h1 class="text-primary">@ViewBag.Subtitulo</h1>
    </div>
    <div>
        <a asp-action="Cadastrar" class="btn btn-primary">Novo Cliente</a>
    </div>
</header>
<hr />

<partial name="_Mensagem" />

@if (Model.Count() > 0)
{
    <table class="text-primary table-dark table table-striped border border-primary border-2 rounded-3 tabela-clientes" id="tableAll">
        <thead>
            <tr>
                <th>Nome</th>
                <th>E-mail</th>
                <th>CPF</th>
                <th>Idade</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var clientes in Model)
            {
                <tr>
                    <td>@clientes.Nome</td>
                    <td>@clientes.Email</td>
                    <td>@clientes.CPF</td>
                    <td>@clientes.Idade</td>
                    <td>
                        <a asp-action="Index" asp-controller="Pedido" asp-route-cid="@clientes.IdUsuario"
                           class="bi bi-bag-plus btn btn-outline-secondary"></a>
                        <a asp-action="Index" asp-controller="Endereco" asp-route-cid="@clientes.IdUsuario"
                           class="bi bi-house btn btn-outline-secondary"></a>
                        <a asp-action="Cadastrar" asp-route-id="@clientes.IdUsuario"
                           class="bi bi-pencil btn btn-outline-secondary"></a>
                        <a asp-action="Excluir" asp-route-id="@clientes.IdUsuario"
                           class="bi bi-trash3-fill btn btn-outline-danger"></a>
                    </td>
                </tr>
            }

        </tbody>
    </table>
}
else
{
    <p>Não há nennhum Cliente cadastrado</p>
}
